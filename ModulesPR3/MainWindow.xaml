<Window x:Class="ModulesPR3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModulesPR3"
        mc:Ignorable="d"
        Title="Практическая работа 3" Height="800" Width="915" Icon="/Resources/Logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.Background="DarkBlue">
            <Image HorizontalAlignment="Left" Height="50" Margin="21,17,0,0" VerticalAlignment="Top" Width="50" Source="/Resources/Logo.ico"/>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="0">
            <Button x:Name='btnBack' 
                    Content="Назад"
                    Click="BtnBack_OnClick"/>
        </Grid>
        
        <Frame Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" 
               x:Name="frmMain"
               Initialized="FrmMain_OnInitialized"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
