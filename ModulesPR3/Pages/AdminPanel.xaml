<Page x:Class="ModulesPR3.Pages.AdminPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AdminPanel">

    <Grid Background="#f0f2f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель поиска и фильтрации -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBox x:Name="txtSearch"
                     Width="200"
                     Margin="5"
                     Text="Поиск по ФИО..."/>
            <ComboBox x:Name="cmbFilter"
                      Width="150"
                      Margin="5"
                      SelectionChanged="cmbFilter_SelectionChanged"
                      Text="Фильтр по должности"/>
        </StackPanel>

        <!-- Список сотрудников -->
        <ListView x:Name="lvStaff"
                  Grid.Row="2"
                  Margin="10"
                  MouseDoubleClick="lvStaff_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#ccc" BorderThickness="1" Margin="5" Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Фото (заглушка) -->
                            <Image Width="80" Height="80"
                                   Source="/Resources/default.png"
                                   Grid.Column="0"/>

                            <!-- Информация о сотруднике -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="{Binding full_name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding position}" Foreground="Gray"/>
                                <TextBlock Text="{Binding email}"/>
                                <TextBlock Text="{Binding phone}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопка добавления -->
        <Button x:Name="btnAddStaff"
                Grid.Row="3"
                Content="Добавить сотрудника"
                Width="200"
                Height="35"
                Margin="10"
                HorizontalAlignment="Left"
                Click="btnAddStaff_Click"/>
    </Grid>
</Page>