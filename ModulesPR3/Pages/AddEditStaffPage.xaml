<Page x:Class="ModulesPR3.Pages.AddEditStaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#f0f2f5"
      Title="AddEditStaffPage">

    <Grid>
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                MaxWidth="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                           Text="Редактирование сотрудника"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Поля -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                    <TextBlock Text="ФИО:" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtFullName"
                             Width="250" Height="30" FontSize="15" Margin="0,0,0,10"/>

                    <TextBlock Text="Должность:" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtPosition"
                             Width="250" Height="30" FontSize="15" Margin="0,0,0,10"/>

                    <TextBlock Text="Email:" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail"
                             Width="250" Height="30" FontSize="15" Margin="0,0,0,10"/>

                    <TextBlock Text="Телефон:" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtPhone"
                             Width="250" Height="30" FontSize="15" Margin="0,0,0,10"/>

                    <TextBlock Text="Логин:" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLogin"
                             Width="250" Height="30" FontSize="15" Margin="0,0,0,10"/>

                    <TextBlock Text="Пароль:" FontSize="16" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPassword"
                                 Width="250" Height="30" FontSize="15" Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnSave"
                            Content="Сохранить"
                            Width="120" Height="35"
                            Background="DarkBlue"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="5"
                            Click="btnSave_Click"/>
                    <Button x:Name="btnDelete"
                            Content="Удалить"
                            Width="120" Height="35"
                            Background="Gray"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="5"
                            Click="btnDelete_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>