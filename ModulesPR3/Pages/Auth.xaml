<Page x:Class="ModulesPR3.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#f0f2f5"
      Title="Auth">

    <Grid>
        <Border Background="White"
                CornerRadius="10"
                Padding="20"
                MaxWidth="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0"
                           Text="Авторизация"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Поля ввода -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Логин" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtbLogin"
                             Width="240"
                             Height="30"
                             Padding="4"
                             FontSize="15"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Пароль" FontSize="16" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtbPassword"
                                 Width="240"
                                 Height="30"
                                 Padding="4"
                                 FontSize="15"
                                 Margin="0,0,0,10"/>

                    <!-- Капча -->
                    <StackPanel x:Name="CaptchaPanel" Visibility="Collapsed">
                        <TextBlock Text="Капча" FontSize="16" Margin="0,10,0,5"/>
                        <TextBlock x:Name="tbCaptcha" Text="Код капчи" FontSize="16" Margin="0,0,0,6"/>
                        <TextBox x:Name="txtbCaptcha"
                                 Width="240"
                                 Height="30"
                                 Padding="4"
                                 FontSize="15"
                                 Margin="0,0,0,10"/>
                    </StackPanel>
                </StackPanel>

                <!-- Таймер блокировки -->
                <TextBlock Grid.Row="2"
                           x:Name="tbLockTimer"
                           Foreground="Red"
                           FontSize="14"
                           FontWeight="Bold"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>

                <!-- Кнопки -->
                <Button Grid.Row="3"
                        x:Name="btnLogIn"
                        Content="Войти"
                        Width="250"
                        Height="35"
                        Background="DarkBlue"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Click="BtnLogIn_OnClick"/>

                <Button Grid.Row="4"
                        x:Name="btnLogInGuest"
                        Content="Войти как гость"
                        Width="250"
                        Height="35"
                        Background="DarkBlue"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Click="BtnLogInGuest_OnClick"/>
            </Grid>
        </Border>
    </Grid>
</Page>