<Page x:Class="ModulesPR3.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ModulesPR3.Pages"
      mc:Ignorable="d"
      Title="Auth" Height="500" Width="915">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.Column="1">
            <TextBlock HorizontalAlignment="Center"
                       Margin="5, 10, 5, 5"
                       FontFamily="Times New Roman"
                       FontSize="24">Логин</TextBlock>
            <TextBox Height="25" Width="150"
                     x:Name="txtbLogin"></TextBox>
        </Grid>
        
        <Grid Grid.Row="1" Grid.Column="1">
            <TextBlock HorizontalAlignment="Center"
                       Margin="5, 10, 5, 5"
                       FontFamily="Times New Roman"
                       FontSize="24">Пароль</TextBlock>
            <TextBox Height="25" Width="150"
                     x:Name="txtbPassword"></TextBox>
        </Grid>
        
        <Grid Grid.Row="2" Grid.Column="1">
            <Button x:Name="btnLogIn" 
                    Content="Войти"
                    Click="BtnLogIn_OnClick"/>
        </Grid>
    </Grid>
</Page>
